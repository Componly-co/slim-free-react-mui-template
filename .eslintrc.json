{
	"env": {
		"browser": true,
		"es2021": true,
		"amd": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:react/jsx-runtime",
		"airbnb",
		"eslint-config-prettier",
		"plugin:react/jsx-runtime"
	],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react", "eslint-plugin-prettier"],
	"settings": {
		"react": {
			"version": "detect"
		},
		"import/resolver": {
			"alias": {
				"map": [
					["@", "./src"],
					["@helpers", "./src/utils/helpers"],
					["@hooks", "./src/utils/hooks"]
				],
				"extensions": [".js", ".ts", ".tsx", ".jsx", ".json"]
			}
		}
	},
	"rules": {
		"prettier/prettier": "error",
		"no-console": 0,
		"import/order": 0,
		"no-shadow": 0,
		"allowTernary": 0
	}
}
